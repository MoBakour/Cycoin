<!DOCTYPE html>
<html>
    <!-- Head -->
    <%- include("partials/head") %>
    <!-- Body -->
    <body>
        <!-- Corner Logo -->
        <img
            src="images/logo.svg"
            alt="Website Logo"
            class="home-corner-logo"
        />
        <!-- Back Button -->
        <div class="back-btn home-back-btn" onclick="backHome()">
            <p>Back</p>
            <i class="fas fa-long-arrow-alt-left"></i>
        </div>
        <!-- Home Main Section -->
        <section class="home-section home-sections">
            <div class="text-part">
                <p>Welcome to</p>
                <h1>
                    <img
                        src="images/logo.svg"
                        alt="Website Logo"
                        class="logo"
                    />
                    Cycoin
                </h1>
            </div>
            <div class="btns-part">
                <button class="login-btn" onclick="openLogin()">Login</button>
                <button class="signup-btn" onclick="openSingup()">
                    Sign up
                </button>
            </div>
            <p class="ldrbrd-txt">
                Check out the
                <a href="/leaderboard"
                    ><span class="ldrbrd-btn"
                        >leaderboard <i class="fas fa-crown"></i></span
                ></a>
            </p>
        </section>
        <!-- Login Section -->
        <section class="login-section home-sections">
            <form class="login-form form-format">
                <div class="form-header">
                    <h2>Login</h2>
                    <img src="images/tree-paper.png" alt="" />
                </div>
                <div class="form-content">
                    <input
                        type="text"
                        placeholder="username"
                        class="login-username-input"
                    />
                    <p class="form-error-format login-username-error"></p>
                    <div class="password-input">
                        <input
                            type="password"
                            placeholder="password"
                            class="password-field login-password-input"
                        />
                        <i class="fas fa-eye" onclick="showPassword(0)"></i>
                    </div>
                    <p class="form-error-format login-password-error"></p>
                    <button type="button" class="login-submit-btn">
                        Login<i
                            class="far fa-check-circle li-success form-success"
                        ></i>
                    </button>
                </div>
            </form>
        </section>
        <!-- Signup Section -->
        <section class="signup-section home-sections">
            <form class="signup-form form-format">
                <div class="form-header">
                    <h2>Sign up</h2>
                    <img src="images/tree-paper.png" />
                </div>
                <div class="form-content">
                    <input
                        type="text"
                        placeholder="username"
                        class="signup-username-input"
                    />
                    <p class="form-error-format signup-username-error"></p>
                    <div class="password-input">
                        <input
                            type="password"
                            placeholder="password"
                            class="password-field signup-password-input"
                        />
                        <i class="fas fa-eye" onclick="showPassword(1)"></i>
                    </div>
                    <p class="form-error-format signup-password-error"></p>
                    <input
                        type="password"
                        placeholder="confirm password"
                        class="password-confirm-field signup-password-confirm-input"
                    />
                    <p
                        class="form-error-format signup-password-confirmation-error"
                    ></p>
                    <div class="gender-form">
                        <div class="gender-input">
                            <input type="radio" name="gender" id="male" />
                            <label for="male">male</label>
                        </div>
                        <div class="gender-input">
                            <input type="radio" name="gender" id="female" />
                            <label for="female">female</label>
                        </div>
                    </div>
                    <p class="form-error-format signup-gender-error"></p>
                    <button type="button" class="signup-submit-btn">
                        Sign up<i
                            class="far fa-check-circle su-success form-success"
                        ></i>
                    </button>
                </div>
            </form>
        </section>
        <!-- Theme Style Element -->
        <style class="theme-element"></style>
        <!-- Script -->
        <script src="js/home.js" defer></script>
    </body>
</html>
